<div class="pb-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><%= link_to "Runa", root_path %></li>
      <li class="breadcrumb-item active" aria-current="page">Tasks</li>
    </ol>
  </nav>

  <div class="d-grid mb-4">
    <%= link_to "New Task", new_task_path, class: "btn btn-outline-primary" %>
  </div>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @tasks.each do |task| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h4 class="card-title"><%= link_to task.name, task %></h4>
            <p class="card-text">Created <%= time_tag(task.created_at, time_ago_in_words(task.created_at)) %> ago</p>
          </div>
          <div class="card-footer">
            <div class="text-muted"><%= pluralize(task.runs.count, "run") %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @tasks %>
  </div>
</div>
