<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= form_errors_heading(task) %></h4>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control #{"is-invalid" if task.errors[:name].any?}" %>
  </div>

  <div class="form-group">
    <%= f.label :command %>
    <%= f.text_area :command, rows: 3, class: "form-control #{"is-invalid" if task.errors[:command].any?}" %>
  </div>

  <div class="d-grid mt-3">
    <%= f.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>
