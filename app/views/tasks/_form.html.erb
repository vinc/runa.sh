<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading"><%= form_errors_heading(task) %></h4>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control #{"is-invalid" if task.errors[:name].any?}" %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :script %>
    <%= f.text_area :script, rows: 10, class: "form-control #{"is-invalid" if task.errors[:script].any?}" %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :assets %>
    <%= f.text_field :assets, class: "form-control #{"is-invalid" if task.errors[:assets].any?}" %>
  </div>

  <div class="form-group mt-2">
    <%= f.label :runner %>
    <%= f.select :runner, Task.runner_labels.invert, {}, class: "form-select #{"is-invalid" if task.errors[:runner].any?}" %>
  </div>

  <div class="d-grid mt-4">
    <%= f.submit role: "button", class: "btn btn-outline-primary" %>
  </div>
<% end %>
